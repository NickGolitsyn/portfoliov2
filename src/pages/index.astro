		<section class="flex flex-col items-center my-5">
			<h1 class="text-black dark:text-white !mb-3">Skills</h1>
			<ul class="flex flex-wrap justify-center gap-3">
				{stack.map((item) => (
					<PillCard
						item={item}
						hasIcon={true}
					/>
				))}
			</ul>
		</section>
		
		<!-- Hobbies -->
		<section class="flex flex-col items-center my-5">
