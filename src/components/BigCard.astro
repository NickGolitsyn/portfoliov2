---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card bg-stone-700">
	<a href={href} class="bg-stone-700">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		aspect-ratio: 16/10;
		list-style: none;
		display: flex;
		padding: 0.25rem;
		/* background-color: #444542; */
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		/* box-shadow: 0 4px 6px -1px rgba(255, 255, 255, 0.1), 0 2px 4px -2px rgba(255, 255, 255, 0.1); */
		box-shadow: 0 4px 6px -1px #1A3f3f46, 0 2px 4px -2px #1A3f3f46;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #ffffff;
		/* background-color: #444542; */
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		/* font-size: 1.25rem !important; */
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		font-family: 'Velodroma', sans-serif;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #fff;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
