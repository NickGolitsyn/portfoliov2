---
export interface Props {
  text: string;
  href: string;
  isExternal?: boolean;
}

const { text, href, isExternal } = Astro.props;
---

<div class="flex justify-center my-5">
  <a class="text-black dark:text-white py-3 px-5 rounded-md bg-stone-200 dark:bg-stone-700 flex items-center gap-1" href={href} target="_blank">
    {text}
    {isExternal && (
      <span>
        <img src="/externalArrow.svg" alt='external link arrow' class="dark:hidden h-5" />
        <img src="/darkExternalArrow.svg" alt='external link arrow' class="hidden dark:block h-5" />
      </span>
    )}
  </a>
</div>